.container.center-vertical.activities-list
  .main-content.medium
    .text-right.mb-4
      %p.right-info.mb-0
        %strong 
          = "#{t('labels.welcome')},"
        = "#{current_user.email.remove('@michelada.io')}!"
      = link_to  destroy_user_session_path, method: :delete do
        = t('labels.sign_out')
    .d-flex
      %h3
        = t('labels.create_team')
        %span
          = t('labels.dinasty')
    = simple_form_for @team do |f|
      = f.input :name, label: t("labels.name"), input_html: {value: @name, class: 'input-text'}, label_html: { class:'mt-3'}
      %h5.mt-5.mb-3
        = t('labels.invite_users')
      = simple_fields_for :user_invitation_1, defaults: { required: false } do |u|
        = u.input :email, label: t('labels.email_uno'), placeholder: t('placeholders.user_email'), input_html: {class: 'input-text'}
      = simple_fields_for :user_invitation_2, defaults: { required: false } do |u|
        = u.input :email, label: t('labels.email_uno'), placeholder: t('placeholders.user_email'), input_html: {class: 'input-text'}
      = f.button :submit, option, class:'button mb-5'
