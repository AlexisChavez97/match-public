!!!
%html
  %head
    %meta{:content => 'text/html; charset=UTF-8', 'http-equiv' => 'Content-Type'}/
    %title MCM michelada
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
    %meta{:name => 'viewport', :content => 'width=device-width,initial-scale=1'}/
  %body
    = render 'welcome/header'
    .application-content
      .container
        = yield
        - if user_signed_in?
          = link_to t('home'), judge_main_index_path unless current_page?(judge_main_index_path)
          = link_to t('activities.all'), judge_activities_path unless current_page?(judge_activities_path)
          = link_to t('team.create'), new_team_path unless current_page?(new_team_path) || current_user.team
          = link_to t('user.log_out'), destroy_user_session_path, method: :delete
  = render partial: 'welcome/footer'
