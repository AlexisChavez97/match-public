%header
  - if user_signed_in?
    .container.header
      = link_to main_index_path do
        = image_tag 'michelada_white_one', alt: 'company-logo', height: 60, class: 'company-logo'
      .nav
        = link_to new_activity_path do
          = render partial: 'icons/ic_activities', locals: {is_active: controller_path == 'activities' }
        = link_to  main_index_path do
          = render partial: 'icons/ic_top', locals: {is_active: controller_path == 'main' }
        = link_to  new_team_path do
          = render partial: 'icons/ic_team', locals: {is_active: controller_path == 'teams' }
        - if current_user.role == 'judge'
          = link_to judge_main_index_path  do
            = render partial: 'icons/ic_judge', locals: {is_active: controller_path.include?('judge') }
          = link_to t('poll.vote'), judge_polls_path unless there_are_not_polls
        - else
          = link_to t('poll.vote'), polls_path unless there_are_not_polls
