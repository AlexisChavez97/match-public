%h2
  = t("user.log_in")
= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .field
    = f.label :email, t("user.email")
    %br
    = f.email_field :email, class: 'input-text'
  .field
    = f.label :password, t("user.password")
    %br
    = f.password_field :password, class: 'input-text'
  - if devise_mapping.rememberable?
    .field
      = f.check_box :remember_me
      = f.label :remember_me, t("user.remember_me")
  .actions
    = f.submit t("user.log_in"), class: 'button'
= render "devise/shared/links"
