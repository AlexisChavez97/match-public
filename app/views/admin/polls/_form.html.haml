= simple_form_for [:admin, @poll] do |f|
  .form-group
    = t('labels.start_date')
    = f.date_field :start_date, min: Date.today, class: "form-control"
  .form-group
    = t('labels.end_date')
    = f.date_field :end_date, min: Date.today, class: "form-control"
  %h4
    = t('labels.activities_range')
  .form-group
    = t('labels.start_date')
    = f.date_field :activities_from, class: "form-control"
  .form-group
    = t('labels.end_date')
    = f.date_field :activities_to, class: "form-control"
           
  = f.button :submit, option
