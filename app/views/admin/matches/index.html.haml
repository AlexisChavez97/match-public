%table
  %tr
    %th
      = t('labels.match')
    %th 
      = t('labels.type')
    %th
      = t('labels.version')
    %th
      = t('labels.start_date')
    %th
      = t('labels.end_date')
    %th
      = t('labels.leader')
    %th{colspan: 3}
      = t('buttons.actions')
  
  - @matches.each do |m|
    %tr
      %td
        = m.id
      %td
        = m.match_type
      %td
        = m.version
      %td
        = m.start_date.to_date
      %td
        = m.end_date.to_date
      %td
        = ":("
      %td
        = link_to t('buttons.show'), admin_match_path(m)
      %td
        = link_to t('buttons.edit'), edit_admin_match_path(m)
      %td
        = link_to t('buttons.delete'), admin_match_path(m), method: :delete, data: {confirm: t('actions.confirm')}

%p
  = link_to t('buttons.new'), new_admin_match_path
