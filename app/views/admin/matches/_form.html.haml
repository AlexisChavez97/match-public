= simple_form_for [:admin, @match] do |f|
  = f.error :base
  .form-group
    %p
      = t('labels.start_date')
      = f.date_select :start_date, start_year: Date.today.year, end_year: Date.today.year+1, class: "form-control"
  .form-group
    %p
      = t('labels.end_date')
      = f.date_select :end_date, start_year: Date.today.year, end_year: Date.today.year+1, class: "form-control"
  .form-group
    %p
      = t('labels.match_type')
      = f.input :match_type, collection: Match.match_types.keys

  = f.button :submit, class: 'button'
