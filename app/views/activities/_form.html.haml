= simple_form_for (@activity) do |f|
  .location_list_elements
    %input{:type=>"text", :hidden => true, :name => "locations_string", :value => "", :id => "locations_string"}
 
  = f.input :name, label: t("labels.name"), placeholder: t("placeholders.activity_name")

  = t("labels.location")
  = f.select :locations, @locations.map {|l| l.name}
  = link_to t("buttons.add"), new_activity_path, id: "add_location"

  #other_location
    = f.input :location, label: t("labels.other_location")
  = link_to t("buttons.add_other"), new_activity_path, id: "add_new"

  .locations_list
    %ul
      - loaded_locations = ""
      - @selected_locations.each_with_index do |location|
        %li{id: location[:id]}= location[:name]
        %input{id: location[:id], type: "button", value: "-"}
        - loaded_locations += (location[:name]+"ÃŸ")
      %input{:type=>"text", :hidden=>"true", :id=>"loaded_locations", :value=>loaded_locations}

  = f.input :activity_type, label: t('labels.type'), collection: Activity.activity_types.keys, include_blank: false
  = f.input :location, label: t("labels.location"), placeholder: t("placeholders.location_name")
  = f.input :english, label: t("labels.english")
  %input{:type=>"submit"}
