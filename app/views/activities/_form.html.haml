.container.center-vertical.activities
  .main-content.medium.mt-5
    = simple_form_for (@activity) do |f|
      .location_list_elements
        %input{:type=>"text", :hidden => true, :name => "locations_string", :value => "", :id => "locations_string"}

      %label
        = t('labels.type')
      = f.select :activity_type, Activity.activity_types.keys, include_blank: false
      = f.input :name, label: t("labels.name"), placeholder: t("placeholders.activity.title"), input_html: { class: 'input-text' }
      .optional-fields
        #description
          = f.input :description, label: t("labels.description"), placeholder: t("placeholders.activity.description"), input_html: { class: 'input-text optional-fields' }
        #pitch-audience
          = f.input :pitch_audience, label: t("labels.audience"), placeholder: t("placeholders.activity.audience"), input_html: { class: 'input-text optional-fields' }
        #abstract-outline
          = f.input :abstract_outline, label: t("labels.outline"), placeholder: t("placeholders.activity.guide"), input_html: { class: 'input-text optional-fields' }

      .row
        .col-sm-12.col-xs-12.mb-3
          #other_location
            = f.input :locations, label: t("labels.location"), placeholder: t("placeholders.activity.event"), input_html: { class: 'input-text add-location' }, label_html: { class: 'mt-0'}

      .locations_list.tags_box
        %ul
          - loaded_locations = ""
          - unless @selected_locations.nil?
            - @selected_locations.each_with_index do |location|
              %li{id: location[:id]}
                = location[:name]
                %a{id: location[:id]} x
              - loaded_locations += (location[:name]+"ÃŸ")
          %input{:type=>"text", :hidden=>"true", :id=>"loaded_locations", :value=>loaded_locations}

      = f.input :notes, label: t("labels.link"), placeholder: t("placeholders.notes_description"), input_html: { class: 'input-text' }
      = f.input :english, label: t("labels.english"), input_html: {class: 'mt-0'} , label_html: { class: 'mt-0'}

      - unless @filename.nil?
        = "#{t("labels.selected_file")}: #{@filename}"
      = f.file_field :activity_file, class:'inputfile', :accept => '.pdf,.jpg,.png'

      %input{type: "submit", value: t("buttons.submit"), class: 'button'}
