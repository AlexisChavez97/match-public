.contain.center-vertical
  .main-content.small
    .judge
      = render partial: 'judge/form'
      - @activities&.each do |activity|        
        %p= activity.name
        .d-flex.justify-content-between
          %p
            = activity.activity_type
          = link_to render(partial: 'icons/arrow', locals: {custom_class: 'icon-detail'}), judge_activity_path(activity)
        %p= activity.status
        %hr.section
